extends layout

block head
	meta(content="width=device-width,initial-scale=1,user-scalable=no", name="viewport")
	//link(rel='stylesheet', href='/stylesheets/style-mobile.css')

block content
	div.auth-wrap
		label(for="colour") Colour
		input#txtColour(type="text", name="colour", onkeypress="Colours.SelectionBoxKeyPress(event);")
		label(for="status") Status
		input#txtStatus(type="text", name="status")
		label(for="username") Username
		input#txtUsername(type="text", name="username", onkeyup="Account.LoginKeyUp(event)")
		//label(for="password") Password
		//input#txtPassword(type="text", name="password", onkeyup="Account.LoginKeyUp(event)")
		button#btnLogin(onclick="Account.Login();") Login
	div.messenger
		//div.messenger-tabs
			ol.tabs
				li.tab
					a(href="#messages_Broadcast") Global
			div.clearfix
		ul#userList
		div#messageWindows
			div.message-header
				div.image
				div.name Broadcast
				div.status-bar ...
			ul.message-list.active#messages_Broadcast
		div#smileyBox
		div.input-wrapper
			input#txtMessage(type="text", name="message", onkeyup="Messaging.KeyUp(event);", onkeypress="Messaging.KeyPress(event);")
			div.smiley-icon(onclick="Emoticons.ToggleHelp();")
		div.clearfix